<% 
  # Generate avatar color based on name hash
  hash = (@person.nom + @person.prenom).sum % 360
  bg_color = "hsl(#{hash}, 70%, 85%)"
  text_color = "hsl(#{hash}, 70%, 35%)"
  initials = "#{@person.prenom[0]}#{@person.nom[0]}".upcase
%>

<div class="space-y-6">
  <!-- Breadcrumb -->
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2">
      <li>
        <%= link_to "Personnes", people_path, class: "text-gray-500 hover:text-gray-700" %>
      </li>
      <li>
        <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      </li>
      <li class="text-gray-900 font-medium"><%= @person.prenom %> <%= @person.nom %></li>
    </ol>
  </nav>

  <!-- Profile Card -->
  <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
    <div class="p-8">
      <!-- Profile Header -->
      <div class="flex items-center space-x-6">
        <div class="flex-shrink-0">
          <div class="h-24 w-24 rounded-full flex items-center justify-center text-3xl font-semibold" style="background-color: <%= bg_color %>; color: <%= text_color %>;">
            <%= initials %>
          </div>
        </div>
        <div class="flex-1">
          <h1 class="text-3xl font-bold text-gray-900"><%= @person.prenom %> <%= @person.nom %></h1>
          <% if @person.email.present? %>
            <p class="mt-1 text-lg text-gray-500 italic"><%= @person.email %></p>
          <% end %>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-6 flex space-x-3">
        <%= link_to edit_person_path(@person), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors duration-200" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Modifier
        <% end %>
        <%= link_to person_path(@person), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette personne ?" }, class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-lg text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Supprimer
        <% end %>
        <%= link_to "← Retour à la liste", people_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 transition-colors duration-200" %>
      </div>
    </div>
  </div>

  <!-- Books Section -->
  <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
    <div class="p-8">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-900">
          Livres empruntés (<%= @person.books.count %>)
        </h2>
        <% if @person.books.any? %>
          <%= button_to return_all_books_person_path(@person), method: :post, data: { turbo_confirm: "#{@person.prenom} #{@person.nom} va rendre #{@person.books.count} livre(s). Confirmer ?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-secondary hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary transition-colors duration-200" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Rendre tous les livres (<%= @person.books.count %>)
          <% end %>
        <% end %>
      </div>

      <% if @person.books.any? %>
        <div class="space-y-4">
          <% @person.books.each do |book| %>
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition-colors duration-200">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <svg class="h-10 w-10 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-base font-semibold text-gray-900"><%= book.titre %></h3>
                  <p class="text-sm text-gray-500 italic"><%= book.auteur %></p>
                </div>
              </div>
              <%= link_to "Voir le livre →", book_path(book), class: "text-sm font-medium text-primary hover:text-blue-600 transition-colors duration-200" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <p class="mt-4 text-base text-gray-500">Cette personne n'a emprunté aucun livre actuellement.</p>
        </div>
      <% end %>
    </div>
  </div>


  <!-- Borrow Books Section -->
  <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
    <div class="p-8">
      <div class="flex items-center mb-6">
        <svg class="-ml-1 mr-3 h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        <h2 class="text-2xl font-bold text-gray-900">
          Emprunter un livre
        </h2>
      </div>

      <% if @all_books.any? %>
        <%= form_with url: borrow_book_person_path(@person), method: :patch, data: { controller: "book-search" }, class: "space-y-4" do |f| %>
          <!-- Search Input -->
          <div>
            <label for="book_search" class="block text-sm font-medium text-gray-700 mb-2">
              Rechercher un livre
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </div>
              <input 
                type="text" 
                id="book_search" 
                data-book-search-target="searchInput"
                data-action="input->book-search#search"
                placeholder="Rechercher par titre ou auteur..."
                class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary transition-colors duration-200"
              >
            </div>
          </div>

          <!-- Books List -->
          <div class="max-h-96 overflow-y-auto border border-gray-200 rounded-lg">
            <div class="divide-y divide-gray-200">
              <% @all_books.each do |book| %>
                <% is_available = book.person_id.nil? %>
                <% is_borrowed_by_current_person = book.person_id == @person.id %>
                
                <div 
                  class="p-4 hover:bg-gray-50 transition-colors duration-200 <%= 'opacity-50 bg-gray-50' unless is_available %>"
                  data-book-search-target="bookItem"
                  data-book-title="<%= book.titre %>"
                  data-book-author="<%= book.auteur %>"
                >
                  <label class="flex items-start space-x-3 cursor-pointer">
                    <div class="flex items-center h-6">
                      <input 
                        type="checkbox" 
                        name="book_id" 
                        value="<%= book.id %>"
                        <%= 'disabled' unless is_available %>
                        data-action="change->book-search#selectBook"
                        class="h-5 w-5 text-primary border-gray-300 rounded focus:ring-primary <%= 'cursor-not-allowed' unless is_available %>"
                      >
                    </div>
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center justify-between">
                        <p class="text-base font-semibold text-gray-900 <%= 'line-through' unless is_available %>">
                          <%= book.titre %>
                        </p>
                        <% if is_available %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-green-400" fill="currentColor" viewBox="0 0 8 8">
                              <circle cx="4" cy="4" r="3" />
                            </svg>
                            Disponible
                          </span>
                        <% elsif is_borrowed_by_current_person %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            Déjà emprunté
                          </span>
                        <% else %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                            Emprunté par <%= book.person.prenom %>
                          </span>
                        <% end %>
                      </div>
                      <p class="text-sm text-gray-500 italic mt-1"><%= book.auteur %></p>
                    </div>
                  </label>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="flex items-center justify-between pt-2">
            <%= f.submit "Emprunter le livre sélectionné", 
                data: { book_search_target: "submitButton" },
                disabled: true,
                class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-primary hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed" %>
            <p class="text-sm text-gray-500">
              <%= @all_books.where(person_id: nil).count %> livre(s) disponible(s)
            </p>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <p class="mt-4 text-base text-gray-500">Aucun livre dans la bibliothèque.</p>
          <%= link_to "Ajouter un livre", new_book_path, class: "mt-4 inline-flex items-center text-sm font-medium text-primary hover:text-blue-600 transition-colors duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
