<div class="max-w-2xl mx-auto space-y-6">
  <!-- Breadcrumb -->
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2">
      <li>
        <%= link_to "Livres", books_path, class: "text-gray-500 hover:text-gray-700" %>
      </li>
      <li>
        <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      </li>
      <li>
        <%= link_to @book.titre, book_path(@book), class: "text-gray-500 hover:text-gray-700" %>
      </li>
      <li>
        <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      </li>
      <li class="text-gray-900 font-medium">Modifier</li>
    </ol>
  </nav>

  <!-- Form Card -->
  <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
    <div class="px-8 py-6 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Modifier Livre</h1>
      <p class="mt-1 text-sm text-gray-500">Modifiez les informations de <%= @book.titre %>.</p>
    </div>
    
    <div class="p-8">
      <%= render "form", book: @book %>
    </div>
  </div>
</div>
