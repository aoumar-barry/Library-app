<% 
  # Generate book cover color based on title hash
  hash = @book.titre.sum % 360
  bg_color = "hsl(#{hash}, 60%, 90%)"
  border_color = "hsl(#{hash}, 60%, 70%)"
%>

<div class="space-y-6">
  <!-- Breadcrumb -->
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2">
      <li>
        <%= link_to "Livres", books_path, class: "text-gray-500 hover:text-gray-700" %>
      </li>
      <li>
        <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      </li>
      <li class="text-gray-900 font-medium"><%= @book.titre %></li>
    </ol>
  </nav>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Left Column: Book Cover -->
    <div class="lg:col-span-1">
      <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden sticky top-8">
        <div class="aspect-[2/3] flex items-center justify-center p-12" style="background: linear-gradient(135deg, <%= bg_color %> 0%, white 100%);">
          <svg class="h-32 w-32" style="color: <%= border_color %>;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Right Column: Book Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Book Info Card -->
      <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
        <div class="p-8">
          <h1 class="text-3xl font-bold text-gray-900"><%= @book.titre %></h1>
          <p class="mt-2 text-xl text-gray-600 italic">par <%= @book.auteur %></p>
          
          <div class="mt-6 pt-6 border-t border-gray-200">
            <!-- Status Section -->
            <% if @book.person.present? %>
              <!-- BORROWED STATE -->
              <div class="space-y-4">
                <div class="flex items-center">
                  <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
                    <svg class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                    Emprunté
                  </span>
                </div>

                <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                  <p class="text-sm font-medium text-gray-700 mb-3">Emprunté par :</p>
                  <%= link_to person_path(@book.person), class: "flex items-center space-x-4 p-4 bg-white rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors duration-200" do %>
                    <% 
                      person_hash = (@book.person.nom + @book.person.prenom).sum % 360
                      person_bg = "hsl(#{person_hash}, 70%, 85%)"
                      person_text = "hsl(#{person_hash}, 70%, 35%)"
                      person_initials = "#{@book.person.prenom[0]}#{@book.person.nom[0]}".upcase
                    %>
                    <div class="flex-shrink-0">
                      <div class="h-12 w-12 rounded-full flex items-center justify-center text-base font-semibold" style="background-color: <%= person_bg %>; color: <%= person_text %>;">
                        <%= person_initials %>
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-base font-semibold text-gray-900"><%= @book.person.prenom %> <%= @book.person.nom %></p>
                      <% if @book.person.email.present? %>
                        <p class="text-sm text-gray-500"><%= @book.person.email %></p>
                      <% end %>
                    </div>
                    <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  <% end %>
                </div>

                <!-- Return Button -->
                <%= button_to return_book_book_path(@book), method: :patch, class: "w-full inline-flex justify-center items-center px-4 py-3 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors duration-200" do %>
                  <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
                  </svg>
                  Marquer comme rendu
                <% end %>
              </div>
            <% else %>
              <!-- AVAILABLE STATE -->
              <div class="space-y-4">
                <div class="flex items-center">
                  <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-green-100 text-green-800">
                    <svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    Disponible
                  </span>
                </div>

                <!-- Borrow Form -->
                <div class="bg-blue-50 rounded-lg p-6 border border-blue-200">
                  <div class="flex items-center mb-4">
                    <svg class="h-6 w-6 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                    </svg>
                    <h3 class="text-base font-semibold text-gray-900">Prêter ce livre</h3>
                  </div>

                  <%= form_with url: borrow_book_path(@book), method: :patch, class: "space-y-4" do |f| %>
                    <div>
                      <label for="person_id" class="block text-sm font-medium text-gray-700 mb-2">
                        Sélectionner une personne :
                      </label>
                      <select name="person_id" id="person_id" required class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary sm:text-sm transition-all duration-200">
                        <option value="">Choisir une personne...</option>
                        <% @people.each do |person| %>
                          <option value="<%= person.id %>">
                            <%= person.prenom %> <%= person.nom %> 
                            <% if person.books.count > 0 %>
                              (<%= person.books.count %> livre(s) déjà emprunté(s))
                            <% end %>
                          </option>
                        <% end %>
                      </select>
                    </div>

                    <%= f.submit "Valider le prêt", class: "w-full inline-flex justify-center items-center px-4 py-3 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-primary hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors duration-200" %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Actions -->
          <div class="mt-8 pt-6 border-t border-gray-200 flex flex-wrap gap-3">
            <%= link_to edit_book_path(@book), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors duration-200" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Modifier ce livre
            <% end %>
            <%= link_to book_path(@book), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer ce livre ?" }, class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-lg text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Supprimer
            <% end %>
            <%= link_to "← Retour à la liste", books_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 transition-colors duration-200" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
